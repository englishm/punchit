---
title: Punch Alpha
---

.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      .row-fluid
        .span4
          .row
            .span7.offset1
              .btn-toolbar
                .btn-group
                  - %w(M T W T F).each_with_index do |day, i|
                    - if i == 3
                      .btn-mini.btn.btn-danger= day
                    - else
                      .btn-mini.btn= day
                  .btn-mini.btn.disabled(style="width: 25%")
                    &nbsp;
                    &nbsp;
                    &nbsp;
                  - %w(M T W T F).each_with_index do |day, i|
                    - if i == 0
                      .btn-mini.btn= day
                    - elsif i == 1
                      .btn-mini.btn.active= day
                    - else
                      .btn-mini.btn= day
          .row-fluid
            .span12#app-week-summary
              .week-stats
        .span8
          .row-fluid
            .span4
              %ul.nav
                %li.app-employee
                  %a(data-toggle="modal" data-target="#app-employees-modal")
                    %i.icon-user
                    %span.app-name 
            .span6
              .form-horizontal.pull-right(style="padding: 10px 15px;")
                .control-group#app-date
                  .control-label Active Date
                  .controls
                    %input.input-small.app-punch-date{value: Date.today(), type: "input"}
                    %span#app-datepicker
            .span2#app-day-summary
              %span.badge.badge-success.app-hours-billable
              %span.badge.badge-warning.app-hours-non-billable
              %span.badge.badge-info.app-hours-total
          .row-fluid
            .span12
              .btn-group
                .btn.dropdown-toggle.btn-mini.btn-block#app-new-punch(data-toggle="dropdown" href="#")
                  %span.app-project 
                    %strong Pick a punchable to activate punching!
                    %small Click the day calendar to place your punchable.
                  %span.app-story
                  %span.caret
                %ul.dropdown-menu.pull-right
                  %li
                    %a
                      %i.app-pin.icon-heart
                      Pin Punchable
                  %li
                    %a
                      %i.app-story.icon-plus
                      Add Story
                  %li
                    %a
                      %i.app-url.icon-globe
                      Punchable URL
                  
.container-fluid
  .row-fluid 
    .span4
      .navigation.span4(data-spy="affix")
        .tabbable
          %ul.nav.nav-pills
            %li.active
              %a(data-toggle='tab' href='#all-projects')
                All
            %li
              %a(href='#pinned-projects' data-toggle='tab')
                %i.icon-heart
                Pinned
            %li
              %a(href='#recent-projects' data-toggle='tab')
                Recent
          .tab-content
            .tab-pane.active#all-projects
              #app-all-projects
                %ul.nav.nav-list
                  %li.nav-header
                    All Projects List
                  %li 
                    %input.input-punchit.app-all-projects-typeahead(type="hidden" placeholder="All Projects")
                  %li
                    %ul.app-stories-placeholder.nav.nav-list
            .tab-pane#pinned-projects
              #app-pinned
                %ul.app-punchables
                %ul.app-projects.nav.nav-list
            .tab-pane#recent-projects
              %ul.nav.nav-list#app-recent-projects

    .span8
      #app-calendar.punch-table.calendar
        .punches
          .app-non-editable-punches.pull-right
          .app-editable-punches.pull-left
          %table.table
            - times = []
            - 25.times do |time|
              - if time == 0
                - times << {name: "midnight", hour: time}
              - elsif time == 12 
                - times << {name: "noon", hour: time}
              - elsif time > 12
                - times << {name: "#{time-12}pm", hour: time}
              - else
                - times << {name: "#{time}am", hour: time}

            - times.each do |time| 
              - %w(00 25 5 75).each do |minutes|
                %tr.app-time{"data-time" => "#{time[:hour]}.#{minutes}"}
                  %td.span1{class: minutes == "00" ? "hour" : ""}
                    %small
                      - if minutes == "00"
                        = time[:name]
                      - elsif minutes == "25"
                        %span.muted
                          15
                      - elsif minutes == "5"
                        %span.muted
                          30
                      - elsif minutes == "75"
                        %span.muted
                          45
      
